<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#f0607cf9"
    >

    <TextView
        android:id="@+id/tvAcInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Information"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:textSize="28sp"/>

    <ImageView
        android:id="@+id/AcPhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/tvAcInfo"
        android:layout_centerInParent="true"
        android:src="@drawable/user"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AcPhoto"
        android:layout_centerInParent="true"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="@string/email"/>

                    <TextView
                        android:id="@+id/tvEmail"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="ef.i.a@ya.ru"
                        />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Account state"/>

                    <TextView
                        android:id="@+id/tvPassword"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Active"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Account type"/>

                    <TextView
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Free"
                        />
                </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Free Space in Cloud"/>

            <TextView
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="5.8Gb"
                />
        </LinearLayout>
        <Button
            android:id="@+id/connectToServiceButton"
            android:layout_width="228dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="27dp"
            android:background="@drawable/loginbutton_selector"
            android:text="Buy Premium Account" />
    </LinearLayout>


</RelativeLayout>